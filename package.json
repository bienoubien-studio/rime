{
	"name": "rizom",
	"version": "0.1.0",
	"scripts": {
		"dev": "vite dev",
		"build": "bun ./src/lib/bin/reset/index.ts --force && vite build && npm run package && pnpm build:css",
		"build:css": "postcss dist/**/*.css --replace --config ./postcss.config.cjs",
		"rizom:use": "bun ./src/scripts/useConfig.js",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:multilang": "playwright test -c ./playwright.config.multilang.ts",
		"test:basic": "playwright test -c ./playwright.config.basic.ts",
		"test:live": "playwright test -c ./playwright.config.live.ts",
		"test": "pnpm test:multilang && pnpm test:basic && pnpm test:live",
		"check:circular-deps": "pnpm dlx madge -c --extensions ts ./src/",
		"local-pack": "npm run build && npm pack && echo \"Package created at: $(pwd)/$(npm pack | tail -1)\""
	},
	"license": "MIT",
	"type": "module",
	"bin": {
		"rizom-generate": "./dist/bin/generate/index.js",
		"rizom-build": "./dist/bin/build/index.js",
		"rizom-init": "./dist/bin/init/index.js",
		"rizom-reset": "./dist/bin/reset/index.js"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js"
		},
		"./util": {
			"types": "./dist/util/index.d.ts",
			"import": "./dist/util/index.js"
		},
		"./panel": {
			"types": "./dist/panel/index.d.ts",
			"import": "./dist/panel/index.js"
		},
		"./panel/ui": {
			"types": "./dist/panel/ui.d.ts",
			"import": "./dist/panel/ui.js"
		},
		"./panel/server": {
			"types": "./dist/panel/index.server.d.ts",
			"import": "./dist/panel/index.server.js"
		},
		"./panel/style/index.css": {
			"import": "./dist/panel/style/index.css"
		},
		"./fields": {
			"types": "./dist/fields/index.d.ts",
			"import": "./dist/fields/index.js"
		},
		"./fields/*.svelte": {
			"types": "./dist/plugins/*.svelte.d.ts",
			"default": "./dist/fields/*.svelte"
		},
		"./plugins/*.svelte": {
			"types": "./dist/plugins/*.svelte.d.ts",
			"default": "./dist/plugins/*.svelte"
		},
		"./panel/i18n": {
			"types": "./dist/panel/i18n/index.d.ts",
			"import": "./dist/panel/i18n/index.js"
		},
		"./panel/i18n/*.js": {
			"types": "./dist/panel/i18n/*.d.ts",
			"import": "./dist/panel/i18n/*.js"
		},
		"./panel/pages": {
			"types": "./dist/panel/pages/index.d.ts",
			"import": "./dist/panel/pages/index.js"
		},
		"./api": {
			"types": "./dist/api/index.d.ts",
			"import": "./dist/api/index.js"
		},
		"./vite": {
			"types": "./dist/vite/index.d.ts",
			"import": "./dist/vite/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^2.17.2",
		"better-sqlite3": "^11.6.0",
		"drizzle-kit": "^0.30.4",
		"sharp": "^0.33.5",
		"svelte": "^5.0.0",
		"vite": "^6.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.51.1",
		"@rizom/regenerate-images": "^0.0.5",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.2",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/better-sqlite3": "^7.6.12",
		"@types/clone-deep": "^4.0.4",
		"@types/eslint": "^9.6.1",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^22.13.11",
		"@types/nodemailer": "^6.4.17",
		"@types/postcss-mixins": "^9.0.6",
		"@types/qs": "^6.9.18",
		"@types/sortablejs": "^1.15.8",
		"@types/to-snake-case": "^1.0.2",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.1",
		"postcss-mixins": "^11.0.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.2.12",
		"svelte": "^5.25.2",
		"svelte-check": "^4.1.5",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.27.0",
		"vite": "^6.2.2",
		"vitest": "^3.0.9"
	},
	"dependencies": {
		"@bien-bien/css-reset": "^0.1.0",
		"@clack/prompts": "^0.7.0",
		"@internationalized/date": "^3.7.0",
		"@lucide/svelte": "^0.479.0",
		"@tiptap/core": "^2.11.5",
		"@tiptap/extension-blockquote": "^2.11.6",
		"@tiptap/extension-bold": "^2.11.6",
		"@tiptap/extension-bubble-menu": "^2.11.5",
		"@tiptap/extension-bullet-list": "^2.11.6",
		"@tiptap/extension-code-block": "^2.11.6",
		"@tiptap/extension-document": "^2.11.6",
		"@tiptap/extension-dropcursor": "^2.11.7",
		"@tiptap/extension-gapcursor": "^2.11.7",
		"@tiptap/extension-heading": "^2.11.6",
		"@tiptap/extension-highlight": "^2.11.5",
		"@tiptap/extension-history": "^2.11.6",
		"@tiptap/extension-horizontal-rule": "^2.11.6",
		"@tiptap/extension-italic": "^2.11.7",
		"@tiptap/extension-link": "^2.11.5",
		"@tiptap/extension-list-item": "^2.11.6",
		"@tiptap/extension-ordered-list": "^2.11.6",
		"@tiptap/extension-paragraph": "^2.11.6",
		"@tiptap/extension-placeholder": "^2.11.5",
		"@tiptap/extension-text": "^2.11.6",
		"@tiptap/extension-typography": "^2.11.5",
		"@tiptap/html": "^2.11.5",
		"@tiptap/pm": "^2.11.5",
		"@tiptap/starter-kit": "^2.11.5",
		"autoprefixer": "^10.4.21",
		"better-auth": "^1.2.4",
		"bits-ui": "1.3.11",
		"camelcase": "^8.0.0",
		"chalk": "^5.4.1",
		"clone-deep": "^4.0.1",
		"command-score": "^0.1.2",
		"commander": "^12.1.0",
		"dedent": "^1.5.3",
		"deep-object-diff": "^1.1.9",
		"deepmerge": "^4.3.1",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.4",
		"flat": "^6.0.1",
		"js-cookie": "^3.0.5",
		"loglevel-plugin-prefix": "^0.8.4",
		"mode-watcher": "^0.4.1",
		"nodemailer": "^6.10.0",
		"paneforge": "^0.0.6",
		"polka": "^0.5.2",
		"qs": "^6.14.0",
		"runed": "^0.23.4",
		"sortablejs": "^1.15.6",
		"svelte-sonner": "^0.3.28"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"sharp"
		]
	}
}
